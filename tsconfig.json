{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "moduleDetection": "auto",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedSideEffectImports": true,
    "removeComments": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
