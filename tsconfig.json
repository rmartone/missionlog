{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "composite": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "importHelpers": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedSideEffectImports": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
